<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/character_item_margin"
    android:clickable="true"
    android:elevation="10dp"
    android:focusable="true"
    android:background="@color/screen_bg"
    app:cardBackgroundColor="@color/screen_bg"
    app:cardCornerRadius="15dp"
    app:contentPadding="@dimen/character_item_radius">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fim_name"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            tools:text="" />

        <TextView
            android:id="@+id/tv_fim_release_date"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textStyle="italic"
            tools:text="" />

        <TextView
            android:id="@+id/tv_film_crawl"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_color"
            tools:text="" />

    </LinearLayout>
</androidx.cardview.widget.CardView>